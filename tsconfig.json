{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@tamagui/*": ["node_modules/@tamagui/*"]
    },
    "jsx": "react-native",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@tamagui"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
